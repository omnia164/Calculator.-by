while True:
    num1 = float(input('Enter first number: '))
    oper = input("Choose an operation (+, -, *, /): ")
    num2 = float(input("Enter second number: "))

    if oper == "+":
        result = num1 + num2
        print("Result:", result)

    elif oper == "-":
        result = num1 - num2
        print("Result:", result)

    elif oper == "*":
        result = num1 * num2
        print("Result:", result)

    elif oper == "/":
        if num2 != 0:
            result = num1 / num2
            print("Result:", result)
        else:
            print("âš ï¸ Can't divide by zero.")

    else:
        print("âš ï¸ Invalid operation:", oper)

    # ğŸ§  Ù†Ø³Ø£Ù„ Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù…: Ù‡Ù„ ØªØ­Ø¨ ØªÙƒÙ…Ù‘Ù„ ÙˆÙ„Ø§ ØªØ®Ø±Ø¬ØŸ
    choice = input("\nDo you want to try again? (yes/no): ").lower()
